<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#E0F7FA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#E0F7rFA">

        <TextView android:text="Mothership Degree"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:id="@+id/textView"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Spotify Streamer"
            android:id="@+id/spotifyStreamer"
            android:layout_alignParentRight="true"
            android:background="#0097A7"
            android:layout_margin="5dp"
            android:textColor="#E0F7FA" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Scores App"
            android:id="@+id/scoresApp"
            android:background="#0097A7"
            android:layout_margin="5dp"
            android:textColor="#E0F7FA" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Library App"
            android:id="@+id/libraryApp"
            android:background="#0097A7"
            android:layout_margin="5dp"
            android:textColor="#E0F7FA" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Build it Bigger"
            android:id="@+id/buildBigger"
            android:background="#0097A7"
            android:layout_margin="5dp"
            android:textColor="#E0F7FA" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="XYZ Reader"
            android:id="@+id/xyzReader"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#0097A7"
            android:layout_margin="5dp"
            android:textColor="#E0F7FA" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="CapStone: cool app name"
            android:id="@+id/capStone"
            android:background="#0097A7"
            android:layout_margin="5dp"
            android:textColor="#E0F7FA" />
    </LinearLayout>

</RelativeLayout>
